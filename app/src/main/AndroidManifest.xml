<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.damocles">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
            android:name="com.damocles.DamoclesApplication"
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:configChanges="navigation|orientation|keyboardHidden|screenSize|uiMode">


        <activity android:name="com.damocles.MainActivity"
                  android:configChanges="navigation|orientation|keyboardHidden|screenSize|uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.damocles.sample.CascadeLayoutActivity"/>
        <activity android:name="com.damocles.sample.PreferenceActivitySample"
                  android:theme="@style/Theme.AppCompat.Light"/>
        <activity android:name="com.damocles.sample.SwitcherActivity"/>
        <activity android:name="com.damocles.sample.ViewGroupAnimationActivity"/>
        <activity android:name="com.damocles.sample.CanvasAnimationActivity"
                  android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name="com.damocles.sample.LEDActivity"/>
        <activity android:name="com.damocles.sample.ToastActivity"/>
        <activity android:name="com.damocles.sample.BroadcastActivity"/>
        <activity android:name="com.damocles.sample.ListViewSectionActivity"/>
        <activity android:name="com.damocles.sample.ListViewChoiceModeActivity"/>
        <activity android:name="com.damocles.sample.MultiIntentActivity"/>
        <activity android:name="com.damocles.sample.BlueToothActivity"/>
        <activity android:name="com.damocles.sample.VehicleActivity"/>
        <activity android:name="com.damocles.sample.AnimationActivity"/>
        <activity android:name="com.damocles.sample.RecyclerViewActivity"/>
        <activity android:name="com.damocles.sample.NightModeActivity"
                  android:configChanges="uiMode"/>

        <activity android:name="com.damocles.sample.TTSActivity"/>
        <activity android:name="com.damocles.sample.PendulumActivity"/>
        <activity android:name="com.damocles.sample.RecyclingViewPagerActivity"
                  android:screenOrientation="landscape"/>

        <service android:name="com.damocles.sample.service.MyService"/>

    </application>

</manifest>
