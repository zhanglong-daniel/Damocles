<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".sample.BlueToothActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/bluetooth_toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorToolbar"
            android:layout_height="wrap_content"
            app:title="Blue Tooth Demo"/>
    <TextView
            android:id="@+id/bluetooth_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前蓝牙：null"/>
    <Button
            android:id="@+id/bluetooth_btn_enable"
            style="@style/Button.Bluetooth"
            android:layout_marginTop="300dp"
            android:layout_centerInParent="true"
            android:text="开启蓝牙"/>
    <Button
            android:id="@+id/bluetooth_btn_disable"
            style="@style/Button.Bluetooth"
            android:layout_marginTop="300dp"
            android:layout_centerInParent="true"
            android:text="关闭蓝牙"/>
    <Button
            android:id="@+id/bluetooth_btn_start_discovery"
            style="@style/Button.Bluetooth"
            android:layout_marginTop="300dp"
            android:layout_centerInParent="true"
            android:text="发现蓝牙设备"/>
    <Button
            android:id="@+id/bluetooth_btn_cancel_discovery"
            style="@style/Button.Bluetooth"
            android:layout_marginTop="300dp"
            android:layout_centerInParent="true"
            android:text="停止发现蓝牙设备"/>
    <ListView
            android:id="@+id/bluetooth_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

</LinearLayout>
