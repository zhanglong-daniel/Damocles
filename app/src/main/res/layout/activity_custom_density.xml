<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".sample.CustomDensityActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/custom_density_toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorToolbar"
            android:layout_height="wrap_content"
            app:title="Custom Density"/>

    <View android:layout_width="600px"
          android:layout_height="50px"
          android:background="#ff0000"/>
    <View android:layout_width="300px"
          android:layout_height="50px"
          android:layout_marginTop="20px"
          android:background="#00ff00"/>
    <View android:layout_width="150px"
          android:layout_height="50px"
          android:layout_marginTop="20px"
          android:background="#ff0000"/>
    <Button
            android:id="@+id/custom_density_btn"
            android:layout_width="300dp"
            android:layout_marginTop="20px"
            android:layout_height="100px"
            android:text="density=240"/>

</LinearLayout>
