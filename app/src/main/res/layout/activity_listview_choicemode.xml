<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".sample.ListViewChoiceModeActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/listview_choicemode_toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorToolbar"
            android:layout_height="wrap_content"
            app:title="ListView ChoiceMode"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onPickCountryClick"
            style="@style/Button.Main"
            android:text="Pick Country"/>

    <ListView
            android:id="@+id/listview_choicemode_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"/>
</LinearLayout>
