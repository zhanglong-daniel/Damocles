<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".sample.ToastActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toast_toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorToolbar"
            android:layout_height="wrap_content"
            app:title="Toast"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/toast_btn_left_top"
                style="@style/Button.Toast"
                android:text="Show Toast"/>
        <Button
                android:id="@+id/toast_btn_right_top"
                style="@style/Button.Toast"
                android:layout_alignParentRight="true"
                android:text="Show Toast"/>
        <Button
                android:id="@+id/toast_btn_left_bottom"
                android:layout_alignParentBottom="true"
                style="@style/Button.Toast"
                android:text="Show Toast"/>
        <Button
                android:id="@+id/toast_btn_right_bottom"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                style="@style/Button.Toast"
                android:text="Show Toast"/>
        <Button
                android:id="@+id/toast_btn_center"
                style="@style/Button.Toast"
                android:layout_centerInParent="true"
                android:text="Show Toast"/>
    </RelativeLayout>


</LinearLayout>
