<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".sample.WechatActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/wechat_toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorToolbar"
            android:layout_height="wrap_content"
            app:title="收发微信消息"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/wechat_txt_url"
                    android:layout_width="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:padding="8dp"
                    android:text="url"
                    android:scrollbars="vertical"/>

            <TextView
                    android:id="@+id/wechat_txt_result"
                    android:layout_width="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:padding="8dp"
                    android:text="请求结果"
                    android:scrollbars="vertical"/>

            <Button
                    android:id="@+id/wechat_btn_login"
                    style="@style/Button.Main"
                    android:layout_centerInParent="true"
                    android:text="登录微信web版"/>
            <Button
                    android:id="@+id/wechat_btn_contact"
                    style="@style/Button.Main"
                    android:layout_centerInParent="true"
                    android:text="查看通讯录"/>
            <Button
                    android:id="@+id/wechat_btn_send"
                    style="@style/Button.Main"
                    android:layout_centerInParent="true"
                    android:text="Send Msg"/>

        </LinearLayout>
        <ImageView
                android:id="@+id/wechat_image_qrcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#88ffffff"
                android:scaleType="center"
                android:visibility="gone"/>
    </RelativeLayout>


</LinearLayout>
