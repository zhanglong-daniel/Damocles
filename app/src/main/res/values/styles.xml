<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowBackground">@color/colorWindowBg</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.NoFullScreen">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">#7fa87f</item>
        <item name="android:dropDownVerticalOffset">-15dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
    </style>

    <style name="Button.Base" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Main" parent="Button.Base">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Button.Toast" parent="Button.Main">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Button.Bluetooth" parent="Button.Main">
        <item name="android:layout_height">40dp</item>
    </style>

</resources>